{
    "title": "Tab Key overrides",
    "rules": [
      {
        "description": "Change tab key to act as ctrl key, when held.",
        "manipulators": [
          {
            "type": "basic",
            "from": {
              "key_code": "left_gui",
              "modifiers": "any"
            },
            "to": [
              {
                "set_variable": {
                  "name": "left_gui_pressed",
                  "value": 1
                }
              },
              {
                "key_code": "left_gui"
              }
            ]
          },
          {
            "type": "basic",
            "from": {
              "key_code": "tab",
              "modifiers": {
                "optional": [
                  "any"
                ]
              }
            },
            "to_if_held_down": [
              {
                "key_code": "left_control",
                "modifiers": [
                    ""
                ]
              }
            ],
            "conditions": [
                {
                  "type": "variable_unless",
                  "name": "left_gui_pressed",
                  "value": 1
                }
            ]
          }
        ]
      }
    ]
  }